<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Categories - Aivana</title>
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
  <header>
    <nav>
      <div class="logo">AIVANA</div>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/dashboard" class="active">Dashboard</a></li>
      </ul>
    </nav>
  </header>

  <main class="dashboard-container">
    <aside class="sidebar">
      <h3>Menu</h3>
      <ul>
        <li><a href="/dashboard">Overview</a></li>
        <li><a href="/dashboard/products">Manage Products</a></li>
        <li><a href="/dashboard/categories" class="active">Manage Categories</a></li>
        <li><a href="/dashboard/orders">Orders</a></li>
        <li><a href="/dashboard/analytics">Analytics</a></li>
      </ul>
    </aside>

    <section class="main-content">
      <h1>Manage Categories</h1>

      <button id="add-category-btn" class="btn-primary">Add New Category</button>

      <div id="category-form-container" style="display:none;">
        <h2 id="form-title">Add New Category</h2>
        <form id="category-form">
          <input type="hidden" id="category-id">
          <div class="form-group">
            <label for="category-name">Category Name</label>
            <input type="text" id="category-name" required>
          </div>
          <div class="form-group">
            <label for="category-description">Description</label>
            <textarea id="category-description"></textarea>
          </div>
          <button type="submit" class="btn-primary">Save Category</button>
          <button type="button" id="cancel-category-btn" class="btn-secondary">Cancel</button>
        </form>
      </div>

      <div class="table-responsive">
        <table id="categories-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Description</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="categories-tbody">
            <!-- Categories will be loaded here -->
          </tbody>
        </table>
      </div>
    </section>
  </main>

  <script src="/static/js/categories.js"></script>
</body>
</html>